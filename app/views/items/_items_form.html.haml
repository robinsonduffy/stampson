= form_for @item do |f|
  = render "shared/error_messages", :object => f.object
  %div.form-field
    = label_tag :country
    = text_field_tag :country, @country.name || ''
  %div.form-field
    = f.label :scott_number
    = f.text_field :scott_number
  %div.form-field
    = f.label :description
    = f.text_area :description
  %div.form-actions
    = f.submit "#{action} Item"